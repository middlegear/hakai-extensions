{
  "include": ["src"],
  "exclude": ["**/*.test.ts"],
  "compilerOptions": {
    "target": "ESNext" ,
    "module": "ESNext" ,
    "moduleResolution": "node", 
    "noEmit": true,
    "emitDeclarationOnly": false,
    "isolatedModules": false,
    "esModuleInterop": true ,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noUncheckedIndexedAccess": true, 
    "declaration": true,
    "skipLibCheck": true ,
    "lib": ["ESNext"],
    
  }
}